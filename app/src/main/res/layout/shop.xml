<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:clickable="true"
    android:onClick="ShopRemoveFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shop"
        android:clickable="true"
        android:padding="5dp"
        android:weightSum="3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_gravity="start">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duck"
                android:id="@+id/UpgradeDucksLeaf"
                android:onClick="UpgradeDucks"
                android:layout_gravity="center_vertical"
                android:background="@drawable/eucalyptusleaf"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp" >
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:layout_width="0dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/CloseShop"
                android:background="@drawable/buttons"
                android:id="@+id/GoBackButton"
                android:textColor="#ffffff"
                android:onClick="RemoveShop"
                android:layout_gravity="right|bottom" />
        </LinearLayout>




    </LinearLayout>



</FrameLayout>